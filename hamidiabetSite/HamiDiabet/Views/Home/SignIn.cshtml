@model HamiDiabet.Models.SignIn

@{
    ViewBag.Title = "SignIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/sign.css" rel="stylesheet" />
<div class="limiter">
    <div class="container-login100">
        @using (Html.BeginForm())
        {
            <div>
                <fieldset>
                    <div class="wrap-login100 p-l-50 p-r-50 p-t-72 p-b-50">
                        <form class="login100-form validate-form">
                            <span class="label-input100">@Html.ValidationMessageFor(u => u.err)</span>
                            <span class="login100-form-title p-b-59">
                                ورود
                            </span>

                            <div class="wrap-input100 validate-input">
                                <span class="label-input100">@Html.LabelFor(u => u.mobile)</span>
                                <div class="editor-field">
                                    @Html.TextBoxFor(u => u.mobile, new { @class = "txtclass" })
                                    @Html.ValidationMessageFor(u => u.mobile)
                                </div>
                                <span class="focus-input100"></span>
                            </div>

                            <div class="wrap-input100 validate-input">
                                <span class="label-input100">@Html.LabelFor(u => u.password)</span>
                                <div class="editor-field">
                                    @Html.TextBoxFor(u => u.password, new { @class = "txtclass" })
                                    @Html.ValidationMessageFor(u => u.password)
                                </div>
                                <span class="focus-input100"></span>
                            </div>

                            <div class="container-login100-form-btn">
                                <div class="wrap-login100-form-btn">
                                    <div class="login100-form-bgbtn"></div>
                                    <input type="submit" value="ورود" class="login100-form-btn" />
                                </div>

                            </div>
                        </form>

                    </div>
                    <div class="login100-more" style="background-image: url('../../images/bg-01.jpg');position:unset;"></div>
                </fieldset>
            </div>
        }



    </div>
</div>

