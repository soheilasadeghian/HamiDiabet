    <script type="text/javascript" src="revolution/js/extensions/revolution.extension.navigation.min.js"></script>
    <script>

        jQuery(document).ready(function () {
            jQuery('#slider1').revolution(
            {
                sliderType: 'standard',
                sliderLayout: 'auto',
                delay: 9000,
                navigation:
                {
                    arrows:
                    {
                        enable: true
                    }
                },
                gridwidth: [1200, 992, 786, 480],
                gridheight: [740, 600, 500, 400],
                responsiveLevels: [1200, 992, 786, 480],
                navigation:
                {
                    arrows:
                    {
                        style: 'construction-arrows',
                        enable: true,
                        left:
                        {
                            h_offset: 0
                        },
                        right:
                        {
                            h_offset: 0
                        },
                    },
                },
            });
        });



        var owl = $('.recent-news .owl-carousel');
        $(owl).owlCarousel({
            loop: true,
            margin: 30,
            responsiveClass: true,
            responsive: {
                0: {
                    items: 1,
                    slideBy: 1
                },
                500: {
                    items: 2,
                    slideBy: 2
                },
                992: {
                    items: 3,
                    slideBy: 3
                }
            }
        });

        var owl1 = $('.recent-news .owl-carousel1');
        $(owl1).owlCarousel({
            loop: true,
            margin: 30,
            responsiveClass: true,
            responsive: {
                0: {
                    items: 1,
                    slideBy: 1
                },
                750: {
                    items: 2,
                    slideBy: 2
                }
            }
        });


        /* Recent News Navigation */
        $('.recent-news .owlnext').on('click', function () {
            owl.trigger('next.owl.carousel');
        });

        $('.recent-news .owlprev').on('click', function () {
            owl.trigger('prev.owl.carousel');
        });



    </script>

    <script src="js/functions.js"></script>
    <script>
        $(document).ready(function () {
            $("#loader").css('display', 'none');

            //$("#sliderheader").css('visibility', 'hidden');
            //$("#sliderheader").removeAttribute("style");
            //document.getElementById("sliderheader").removeAttribute("class");
            var aaa = document.getElementById("sliderheader");
            if (aaa != null) {
                aaa.removeAttribute("class");
            }
            // Add smooth scrolling to all links
            $("a").on('click', function (event) {

                // Make sure this.hash has a value before overriding default behavior
                if (this.hash !== "") {
                    // Prevent default anchor click behavior
                    event.preventDefault();

                    // Store hash
                    var hash = this.hash;

                    // Using jQuery's animate() method to add smooth page scroll
                    // The optional number (800) specifies the number of milliseconds it takes to scroll to the specified area
                    $('html, body').animate({
                        scrollTop: $(hash).offset().top


                    }, 800, function () {

                        // Add hash (#) to URL when done scrolling (default click behavior)
                        window.location.hash = hash;
                    });
                } // End if
            });
        });


    </script>

    

